<p id="notice"><%= notice %></p>

<h1>Looking for a Tutor?</h1>

<div class="max-w-sm w-full lg:max-w-full lg:flex">
<div class="h-48 lg:h-auto lg:w-48 flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden">
<%# <%= image_tag advertise.user.photo, width: 100 %>
</div>

<table class="px-6 py-4">
  <thead>
    <tr> 
      <th class="text-sm text-gray-600 flex items-center">Name</th>
      <th class="text-sm text-gray-600 flex items-center">Date</th>
      <th class="text-gray-900 font-bold text-xl mb-2">Title</th>
      <th>Job offer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advertises.each do |advertise| %>
      <tr>
        <td><%= advertise.user.username %></td>
        <td><%= advertise.date %></td>
        <td><%= advertise.title %></td>
        <td><%= advertise.job_offer %></td>
        <td><%= link_to 'Show', advertise %></td>
        <td><%= link_to 'Edit', edit_advertise_path(advertise) %></td>
        <td><%= link_to 'Destroy', advertise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

