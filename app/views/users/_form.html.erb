<div class = "mt-6 tracking-widest bg-gray-500 rounded shadow-2xl text-sm md:text-4xl p-4">
  <%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <p>
      <%= form.label :photo %>
      <%= form.file_field :photo %>
    </p>

    <div class="field">
      <%= form.label :username %>
      <%= form.text_field :username %>
    </div>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :location %>
      <%= form.select :location, ["Australia", "Japan", "New Zealand", 
      "South Africa", "South Korea", "United Kingdom", "USA"]%>
      
    </div>

    <div class="field">
      <%= form.label :ability_level %>
      <p><%= form.radio_button :ability_level, "Beginner" %>  Beginner</p>
      <p><%= form.radio_button :ability_level, "Intermediate" %> Intermediate</p>
      <p><%= form.radio_button :ability_level, "Advanced" %> Advanced</p>
    </div>

    <div class="field">
      <%= form.label :Role %>
      <%= select_tag "role", options_from_collection_for_select(Role.all, "id", "name") %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
    
  <% end %>
</div>
