<p id="notice"><%= notice %></p>

<div class="avatar">
  <% if @user.photo.attached? %>
    <%= image_tag @user.photo, width: 100 %> 
  <% end %>
</div>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Ability level:</strong>
  <%= @user.ability_level %>
</p>

<p>
  <strong>Location:</strong>
  <%= @user.location %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
